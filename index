<body>

  <div class="container">
    <h1 id="randomWord">Loading...</h1>
    <p>Check out this random activity!</p>
  </div>

  <script>
    const activities = [
      "cycling", 
      "weightlifting", 
      "basketball", 
      "futsal", 
      "hiking", 
      "table tennis", 
      "running"
    ];

    function getRandomActivity() {
      const randomIndex = Math.floor(Math.random() * activities.length);
      return activities[randomIndex];
    }

    document.getElementById("randomWord").textContent = getRandomActivity();
  </script>

</body>
